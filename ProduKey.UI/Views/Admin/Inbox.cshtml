@model List<ProduKey.Entity.Inbox>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--**********************************Content body start***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0 ">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Hızlı Erişim</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Gelen Kutusu</a></li>
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="email-left-box">
                            <button class="btn d-flex justify-content-center  btn-dark btn-block">
                                <i class="fa fa-inbox font-18 align-middle mr-2" style="margin-top: 5px;"></i>
                                <b>Gelen Kutusu</b>
                            </button>
                            <div class="mail-list mt-4">
                                <a class="list-group-item border-0 text-primary p-r-0">
                                    <i class="fa fa-inbox font-18 align-middle mr-2"></i>
                                    <b>Gelen Kutusu</b>
                                </a>
                            </div>
                        </div>

                        <div class="email-right-box">
                                @foreach(var item in Model){
                                <div class="email-list m-t-15">

                                    <div class="message">
                                            <a data-toggle="modal" data-target="#detay_@item.ID" style="cursor:pointer">
                                            <div class="col-mail col-mail-2">
                                                <div class="subject">@item.InboxContent ...</div>
                                                <div class="date" style="font-size: 13px;">18:39</div>
                                            </div>
                                        </a>
                                    </div>

                                </div>
                                    <div class="modal fade" id="detay_@item.ID">

                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h3 class="modal-title" id="exampleModalLabel">Kullanıcı Mesajı</h3>
                                                    <button type="button" class="close" data-dismiss="modal">
                                                        <span>&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="container-fluid">
                                                        <div class="row justify-content-center">

                                                            <div class="col-lg-12">
                                                                <label>
                                                                    Adı Soyadı<span class="text-danger">*</span>
                                                                    <p>@item.Name @item.Surname</p>
                                                            </div>

                                                            <div class="col-lg-12">
                                                                <label>
                                                                    Mail Adresi <span class="text-danger">*</span>
                                                                    <p>@item.Mail</p>
                                                            </div>

                                                            <div class="col-lg-12">
                                                                <label>
                                                                    Mesajı <span class="text-danger">*</span>
                                                                    <p>@item.InboxContent</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-dark" data-dismiss="modal">Kapat</button>
                                                    <a href="@Url.Action("InboxDelete", "Admin", new {id = item.ID})" class="btn btn-danger text-white"><i class="fa fa-trash"></i> Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--**********************************Content body end***********************************-->
