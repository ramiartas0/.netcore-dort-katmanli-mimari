
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--**********************************Content body start***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0 ">

        <div style="width: 100%; height: 20px;  float: left; display: flex;  justify-content: space-between; padding-left: 22px;">
            <h4 style="color: #1a1a27;">Hakkımızda Düzenleme</h4>
            <div class="col p-md-0">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Kurumsal</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Hakkımızda Düzenleme</a></li>
                </ol>
            </div>

        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered verticle-middle">

                                <thead>
                                    <tr>
                                        <th scope="col">Hakkımızda Resim</th>
                                        <th scope="col">Eylem</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>
                                            <div>
                                                <a style="cursor: pointer;" type="button" data-toggle="modal" data-target="#logo_img">
                                                    <img src="@ViewBag.AboutImage " height="50px" alt="">
                                                </a>
                                            </div>

                                            <div class="modal fade" id="logo_img">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-body">
                                                            <div class="container-fluid">
                                                                <div class="row justify-content-center">
                                                                    <div class="col-lg-12">
                                                                        <center> <img src="@ViewBag.AboutImage" height="auto" width="50%" alt=""></center>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                        <td>
                                            <span>
                                                <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#edit">
                                                    <i class="fa fa-pencil color-muted m-r-5"></i>
                                                    Düzenle
                                                </button>
                                            </span>

                                            <div class="modal fade" id="edit">
                                                <div class="modal-dialog" role="document">
                                                   
                                                    @using (Html.BeginForm("AboutImagetUpdate", "Admin"))
                                                       {
                                                        <div class="modal-content">

                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">
                                                                    <span>&times;</span>
                                                                </button>
                                                            </div>

                                                            <div class="modal-body">
                                                                <div class="row">
                                                                    <div class="col-lg-12">
                                                                        <div class="card-body">
                                                                            <h4 class="card-title">Hakkımızda Değiştirin</h4>
                                                                            <div class="basic-form">
                                                                                <div class="form-group">
                                                                                    <input type="text" name="Image" value="@ViewBag.AboutImage" class="form-control form-control-solid">
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-dark" data-dismiss="modal">Kapat</button>
                                                                <button class="btn btn-success text-white">Değişikleri Kaydet</button>

                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row page-titles mx-0 ">

        <div style="width: 100%; height: 20px;  float: left; display: flex;  justify-content: space-between; padding-left: 22px;">
            <h4 style="color: #1a1a27;">Hakkımızda Yazı</h4>

        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            @TempData["Mesaj"]
                            @using (Html.BeginForm("AboutContentUpdate", "Admin"))
                            {
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <textarea class="form-control" id="editor" name="Content" rows="10" placeholder="Şirketinizin hakkıında kısaca bilgi veriniz..">
                                            @ViewBag.AboutContent
                                        </textarea>

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-12 d-flex justify-content-end">

                                        <button type="submit" class="btn btn-outline-success ">Güncelle</button>

                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- #/ container -->
    </div>
<!--**********************************Content body end***********************************-->
